<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color_all"
    android:weightSum="640"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="606">

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/adView">
        </android.support.v4.view.ViewPager>

        <ProgressBar
            android:id="@+id/progressLoading_not_invite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_140sdp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/imgPre"
            android:src="@drawable/back_ic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/imgNext"
            android:src="@drawable/back_ic"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:rotation="180"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="36"
        android:weightSum="100"
        android:orientation="horizontal"
        android:id="@+id/bottom_canhan"
        android:background="@color/background_color_all"
        >
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="25"
            android:id="@+id/btnBack"
            android:scaleType="centerInside"
            android:src="@drawable/back_ic"
            android:padding="@dimen/_5sdp"
            android:background="@color/background_color_all"
            android:layout_gravity="center_vertical"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="25"
            android:id="@+id/btnDownload"
            android:scaleType="centerInside"
            android:src="@drawable/download_ic"
            android:padding="@dimen/_5sdp"
            android:background="@color/background_color_all"
            android:layout_gravity="center_vertical"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="25"
            android:id="@+id/btnImageSetWall"
            android:scaleType="centerInside"
            android:src="@drawable/set_default_ic"
            android:padding="@dimen/_5sdp"
            android:background="@color/background_color_all"
            android:layout_gravity="center_vertical"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="25"
            android:id="@+id/btnDetail"
            android:scaleType="centerInside"
            android:src="@drawable/favorite_ic"
            android:padding="@dimen/_5sdp"
            android:background="@color/background_color_all"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>

