<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/_1sdp"
        card_view:cardElevation="@dimen/_10sdp"
        card_view:cardMaxElevation="@dimen/_10sdp"
        android:background="@color/background_item">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@color/background_item">

            <ImageView
                android:id="@+id/list_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:tint="@android:color/white" />


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rihanna Love the way lie"
                android:textColor="@color/white"
                android:typeface="sans"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:padding="@dimen/_3sdp"
                android:layout_below="@+id/list_image"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/artist"/>
            <TextView
                android:id="@+id/artist"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="10dip"
                android:layout_marginTop="1dip"
                android:text="100"
                android:padding="@dimen/_3sdp"
                android:layout_below="@+id/list_image"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="right"/>
            <ProgressBar
                android:id="@+id/progressLoading_not_invite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/_55sdp"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>