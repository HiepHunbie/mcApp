<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color_all"
    android:weightSum="640"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="604">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgImage"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"/>

            <ProgressBar
                android:id="@+id/progressLoading_not_invite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_140sdp"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36"
            android:weightSum="9"
            android:orientation="horizontal"
            android:id="@+id/bottom_canhan"
            android:background="@color/background_color_all"
            >
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="3"
                android:id="@+id/btnBack"
                android:scaleType="centerInside"
                android:src="@drawable/back_ic"
                android:padding="@dimen/_5sdp"
                android:background="@color/background_color_all"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="3"
                android:id="@+id/btnDownload"
                android:scaleType="centerInside"
                android:src="@drawable/download_ic"
                android:padding="@dimen/_5sdp"
                android:background="@color/background_color_all"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="3"
                android:id="@+id/btnDetail"
                android:scaleType="centerInside"
                android:src="@drawable/setting_ic"
                android:padding="@dimen/_5sdp"
                android:background="@color/background_color_all"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

