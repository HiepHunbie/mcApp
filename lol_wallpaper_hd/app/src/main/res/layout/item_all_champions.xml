<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/_1sdp"
        card_view:cardElevation="@dimen/_10sdp"
        card_view:cardMaxElevation="@dimen/_10sdp">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/custom_item_layout"
           >

            <ImageView
                android:id="@+id/list_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:tint="@android:color/white"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"/>


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rihanna Love the way lie"
                android:textColor="@color/text_color"
                android:typeface="sans"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:padding="@dimen/_3sdp"
                android:layout_below="@+id/list_image"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/artist"
                android:background="@color/background_color_all"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:fontFamily="@font/svn_timesnewroman"/>
            <TextView
                android:id="@+id/artist"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/number_color"
                android:textSize="@dimen/_9sdp"
                android:text="10"
                android:padding="@dimen/_3sdp"
                android:layout_below="@+id/list_image"
                android:layout_toLeftOf="@+id/txtView"
                android:gravity="right"
                android:background="@color/background_color_all"
                android:layout_marginBottom="@dimen/_1sdp"
                android:fontFamily="@font/svn_timesnewroman"/>
            <TextView
                android:id="@+id/txtView"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:textSize="@dimen/_9sdp"
                android:background="@color/border_item"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/list_image"/>
            <ProgressBar
                android:id="@+id/progressLoading_not_invite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/_55sdp"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>